@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h1>My Library</h1>
    <a asp-page="/Books/Add" class="btn btn-success">Add new book</a>
    <a asp-controller="Movies" asp-action="Add" class="btn btn-success offset-md-6">Add new movie</a>
<hr />
<div class="row">
    <div class=" col-md-5">
        <h3 class="text-center">Books</h3>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.Books)
                {
                    <tr>
                        <td><a asp-page="/Books/Details" asp-route-id="@book.BookId">@book.Title</a></td>
                        <td><a asp-page="/Authors/Details" asp-route-id="@book.AuthorId">@book.Author</a></td>
                        <td>@book.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class=" col-md-5 offset-md-2">
        <h3 class="text-center">Movies</h3>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Director</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model.Movies)
                {
                    <tr>
                        <td><a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.MovieId">@movie.Title</a></td>
                        <td><a asp-controller="Directors" asp-action="Details" asp-route-id="@movie.DirectorId">@movie.Director</a></td>
                        <td>@movie.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>